#!/bin/bash


export RSYNC_PASSWORD=SETME
#export PATH=$PATH:/opt/bin
#export LD_LIBRARY_PATH=/opt/lib:$LD_LIBRARY_PATH

if [ -n $1 ]; then
    if [ -f $1 ]; then
	source $1
    else
	echo "Bad config file: $1" >> /var/www/seabird/log/rsync.log	
	exit 1
    fi
else
    echo "Please provide configuraiton file!" >> /var/www/seabird/log/rsync.log
    exit 1
fi


alias ls=ls

if [ -e /var/www/seabird/conf/filemover-pass.conf ]; then
    source /var/www/seabird/conf/filemover-pass.conf
fi

RSOPTS="-q -d --timeout=45 --contimeout=45 --partial-dir=/var/www/seabird/tmp --delay-updates --temp-dir=/var/www/seabird/tmp --remove-source-files"

# the cmd: rsync -v -v --no-motd --partial-dir=/tmp --delay-updates --temp-dir=/tmp -z --remove-source-files --stats -h --progress --password-file=/opt/conf/rsync.pass /opt/tmp/rsynctest/filemover/20090305205919.TO.PE36.bundle_q330_packets.tar.gz.dts rsync://data@169.232.144.204/peruin/filemover/

if [ -z $USER ]; then
    export USER=data
fi

if [ -z $NEXT_HOP ]; then
    echo "No next hop!"
    exit 1
fi

if [ -z $SRCID ]; then
    echo "No SRCID!"
    exit 1
fi

if [ -z $DSTID ]; then
    echo "No DSTID!"
    exit 1
fi

if [ -z $LOCKNAME ]; then
    echo "No LOCKNAME!"
    exit 1
fi

for fmd in $FILEMOVER_DIRS; do
	if [ -z $fmd ]; then
    		echo "No filemover dir!"
    		exit 1
	fi
done

mkdir -p /var/lock
LPID=""
if [ -e /var/lock/fm_$LOCKNAME ]; then
    LPID=`cat /var/lock/fm_$LOCKNAME`
    THEPROC=`echo $0 | sed -e 's/.*\///g'`
    ps -p $LPID | grep -q $THEPROC
    if [ $? -eq 0 ]; then
	echo "$THEPROC already running as pid $LPID!"
	exit 1
    fi
fi

echo $$ > /var/lock/fm_$LOCKNAME



for THEDIR in $FILEMOVER_DIRS; do

#THEFILES=`ls -r $THEDIR`
THEFILES=`find $THEDIR`

for FILE in $THEFILES; do

    #if [ -d $FILE ]; then
	#	continue
    #fi

    FILESIZE=`stat -c "%s" $FILE`
    STARTTIME=`date +%s`
    RS_CMD=`rsync $RSOPTS $FILE rsync://$USER@$NEXT_HOP/seabirdin/$FILE &> /dev/null`
    if [ $? -ne 0 ]; then
    	if [ -e /var/www/seabird/log/ ]; then
		LOGDATE=`date +"%Y%m%d_%H%M%S"`
		echo "FILEMOVER_ERR $LOGDATE $FILE $DSTID $SRCID - $? - $RS_CMD" >> /var/www/seabird/log/rsync.log
	fi
	continue
    fi
    ENDTIME=`date +%s`
    
    TTIME=$((($ENDTIME-$STARTTIME)*1000))
    if [ $TTIME -eq 0 ]; then
	TTIME=1000
    fi 
    BANDW=$(($FILESIZE/$TTIME))

    if [ -e /var/www/seabird/log/ ]; then
	LOGDATE=`date +"%Y%m%d_%H%M%S"`
	echo "FILEMOVER_OK $LOGDATE $FILE $DSTID $SRCID $TTIME 0 $BANDW $FILESIZE" >> /var/www/seabird/log/rsync.log
    fi

done

done
